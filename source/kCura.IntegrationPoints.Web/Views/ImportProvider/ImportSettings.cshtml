@{
    Layout = "~/Views/Shared/_StepLayout.cshtml";
}
<meta name="import-base-url" content="/Relativity/CustomPages/DCF6E9D1-22B6-4DA3-98F6-41381E93C30C/" />
<link href="~/Content/import.css" rel="stylesheet" />
<link href="~/Content/themes/default/style.min.css" rel="stylesheet" />
<link href="~/Content/jstree-fluid.css" rel="stylesheet" />
<link href="~/Content/buttermilk-overrides.css" rel="stylesheet" />


<div id="_main">
    <div id="import-provider-configuration">
        <div class="card">
            <span class="label">Import Detail</span>
            <table style="width: 100%;">
                <tr>
                    <td style="width: 48%;">
                        <div class="field-row">
                            <div class="field-label required">
                                Import Type:
                            </div>
                            <div class="field-value">
                                <ul>
                                    <li>
                                        <div class="field-value">
                                            <input name="import-type" value="production" type="radio" data-bind="checked: ImportTypeChoiceValue" />Production<br />
                                            <input name="import-type" value="document" type="radio" data-bind="checked: ImportTypeChoiceValue" />Document<br />
                                            <input name="import-type" value="image" type="radio" data-bind="checked: ImportTypeChoiceValue" />Image<br />
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 48%;">
                        <div class="field-row">
                            <div class="field-label required">
                                Processing Source:
                            </div>
                            <div class="field-value select2-double-width">
                                <select class="fluid-mock-select" id="processingSources" data-bind="optionsText: 'location', optionsValue: 'artifactId', options: ProcessingSourceLocationList, optionsCaption: 'Select...', value: ProcessingSourceLocation, select2: { width: '100%' }"></select>
                            </div>
                        </div>
                        <div class="field-row">
                            <div class="field-label required">
                                Load Data From:
                            </div>
                            <div class="field-value select2-double-width">
                                <div id="location-select" class="select2-container fluid-mock-select filter-container">
                                    <input id="location-input" type="text" readonly='readonly' placeholder="Select..." data-bind="value: Fileshare" />
                                    <span id="location-span" class="icon legal-hold icon-chevron-down" role="presentation"></span>
                                </div>
                                <div id="jstree-holder-div" class="jstree-holder browse" hidden="hidden">
                                    <div id="browser-tree" tabindex="0"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 48%;">
                        <div class="field-row">
                            <div class="field-label required">
                                Load File:
                            </div>
                            <div class="field-value">
                                <ul>
                                    <li>
                                        <div class="field-value">
                                            <input type="text" id="import-loadFile-text" placeholder="Select a file ..." />
                                        </div>
                                    </li>
                                </ul>
                            </div>

                        </div>
                        <div class="field-row">
                            <div class="field-label required">
                                Start Line:
                            </div>
                            <div class="field-value">
                                <ul>
                                    <li>
                                        <div class="field-value">
                                            <input id="import-hascolumnnames-checkbox" type="checkbox" />
                                            <span>First line contains column names</span>
                                            @* data-bind="disable: HasBeenRun()m checked: ExportImages"*@
                                        </div>
                                    </li>
                                    <li>
                                        <div class="field-value">
                                            <input id="import-columnname-numbers" type="number" min="0" placeholder="0" />
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>

        @*Todo: Show and Hide Cards - dependent on radio buttons for Input Type*@

        <div class="card" data-bind="visible: ImportTypeChoiceValue() == 'production'">
            <span class="label">Production</span>
            <table style="width: 100%;">
                <tr>
                    <td style="width: 48%;">
                        <div class="field-row">
                            <div class="field-label required">
                                Production Label:
                            </div>
                        </div>
                    </td>
            </table>
        </div>

        <div class="card" data-bind="visible: ImportTypeChoiceValue() == 'document'">
            <span class="label">Document</span>
            <table style="width: 100%;">
                <tr>
                    <td style="width: 48%;">
                        <div class="field-row">
                            <div class="field-label required">
                                Document Label:
                            </div>
                        </div>
                    </td>
            </table>
        </div>

        <div class="card" data-bind="visible: ImportTypeChoiceValue() == 'image'">
            <span class="label">Image</span>
            <table style="width: 100%;">
                <tr>
                    <td style="width: 48%;">
                        <div class="field-row">
                            <div class="field-label required">
                                Image Data:
                            </div>
                        </div>
                    </td>
            </table>
        </div>
    </div>
</div>

@section scripts
{
<script src="~/Scripts/core/data.js"></script>
<script src="~/Scripts/core/utils.js"></script>
<script src="~/Scripts/knockout-3.4.0.js"></script>
<script src="~/Scripts/export/export-enums.js"></script>
<script src="~/Scripts/jstree.min.js"></script>
<script src="~/Scripts/export/location-jstree-selector.js"></script>


<script src="~/Scripts/Import/import-setup.js"></script>
<script src="~/Scripts/Import/import-provider-settings-step.js"></script>


}
